<Window x:Class="EducationSystem.ViewMaterials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:EducationSystem"
        mc:Ignorable="d"
        Title="Просмотр файлов" Height="400" Width="600">
            <Grid>

                <ListBox Name="FilesListBox" Margin="10" />

                <Button Content="Закрыть" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="CloseButton_Click"/>

                <Button Content="Просмотреть файл" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10 10 100 10" Click="ViewFilesButton_Click" />
            </Grid>
</Window>
